//Sum of array elements
#include <stdio.h>
void main() {
    //size of array
        int n;
        printf("Enter the size of the array:\n");
        scanf("%d",&n);
    
    //scanning the elements
        int a[n];
        printf("Enter all the elements of the array:\n");
        for(int i=0; i<n; i++)
        {
            scanf("%d",&a[i]);
        }
    
    //Computing sum
    int sum=0;
    for(int i=0; i<n; i++)
        {
            sum=sum+a[i];
        }
    
    //Output
    printf("The sum of the elements is %d.\n",sum);
}
