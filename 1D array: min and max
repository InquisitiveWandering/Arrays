//Greatest and smallest of array elements
#include <stdio.h>
void main() {
    //size of array
        int n;
        printf("Enter the size of the array:\n");
        scanf("%d",&n);
    
    //scanning the elements
        int a[n];
        printf("Enter all the elements of the array:\n");
        for(int i=0; i<n; i++)
        {
            scanf("%d",&a[i]);
        }
    
    //intialize and increment
        int max=a[0];
        int min=a[0];
        
        for(int i=0; i<n; i++)
        {
            if(a[i]>max)
            {
                max=a[i];
            }
            if(a[i]<min)
            {
                min=a[i];
            }
        }
    //Output
    printf("Smallest: %d\n",min);
    printf("Largest: %d\n",max);
}
